<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="tolerance.request_identifier.guzzle_middleware_factory" class="Tolerance\Bridge\Guzzle\RequestIdentifier\MiddlewareFactory">
            <argument type="service" id="tolerance.request_identifier.resolver" />
        </service>

        <service id="tolerance.request_identifier.guzzle_middleware" class="Closure">
            <factory service="tolerance.request_identifier.guzzle_middleware_factory" method="create" />

            <tag name="csa_guzzle.middleware" alias="tolerance_request_identifier" />
        </service>
    </services>
</container>
